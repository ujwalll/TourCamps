<%- include("../partials/header.ejs") %>
<div class="container">	
	<div class="row">	
		<h1 style="text-align:center;">
			Create a new campground!
		</h1>
		<div style="width:30%; margin:25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Name of location" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="Price per night" name="price" min="100" step="1">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Image url" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Describe" name="description">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block" type = "submit">
				</div>
			</form>
			<a href="/campgrounds">Go back!</a>
		</div>
	</div>
</div>
<%- include("../partials/footer.ejs") %>
